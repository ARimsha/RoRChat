<% if current_user.present? %>
  <nav class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header u-full-width">
        <div class="flex-div padding-12px">
          <div class="padding-12px">
            <%= current_user.email %> <br/>
            <%= current_user.role %>
          </div>
          <div class="padding-12px margin-right-16px">
            <%= link_to "Log Out", destroy_user_session_path, :method => :delete %> <br/>
            <% if current_user.role == 'admin' %>
              <%= link_to "Admin", rails_admin_path %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </nav>
<% end %>